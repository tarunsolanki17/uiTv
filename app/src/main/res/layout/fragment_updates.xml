<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.tarun.uitsocieties.updates_fragment.UpdatesFrag"
    >


    <android.support.v4.widget.SwipeRefreshLayout
        android:id="@+id/swipe_u"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <ListView
            android:id="@+id/listview_u"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
        </ListView>
    </android.support.v4.widget.SwipeRefreshLayout>

    <ImageView
        android:id="@+id/swipe_text_u"
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:src="@drawable/refresh"
        android:layout_marginTop="10dp"
        android:layout_centerHorizontal="true"/>

    <ProgressBar
        android:id="@+id/progress_bar_u"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true" />

    <LinearLayout
        android:id="@+id/no_internet_u"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_centerInParent="true">
        <ImageView
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:src="@drawable/no_internet"
            android:layout_gravity="center"/>
    <TextView
        android:layout_marginTop="15dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/no_internet"
        style="@style/NothingToShow"
        android:textAlignment="center"/>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/no_data_u"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_centerInParent="true">
    <ImageView
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:src="@drawable/no_updates"
        android:layout_gravity="center"
        />
    <TextView
        android:layout_marginTop="15dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/no_updates"
        style="@style/NothingToShow"
        android:textAlignment="center"
        />
    </LinearLayout>

</RelativeLayout>
